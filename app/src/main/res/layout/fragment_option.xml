<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/white"
        android:elevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date"
            android:text="@string/settings"

            android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TableLayout
        android:layout_marginTop="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:stretchColumns="*"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="@string/glycemiaFormat"
                android:gravity="center|end" />

            <RadioGroup
                android:id="@+id/glycemiaRG"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"

                android:background="@drawable/control_switch_background_border"
                android:orientation="horizontal">
                <!---->

                <RadioButton
                    android:id="@+id/glycemia1"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"
                    app:tabSelectedTextColor="@color/green_dark"

                    android:text="@string/glycemia1"
                    android:textColor="@color/control_switch_color_selector" />

                <RadioButton
                    android:id="@+id/glycemia2"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"
                    app:tabSelectedTextColor="@color/green_dark"

                    android:text="@string/glycemia2"
                    android:textColor="@color/control_switch_color_selector" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="@string/weightFormat"
                android:gravity="center|end" />

            <RadioGroup
                android:id="@+id/weightRG"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"

                android:background="@drawable/control_switch_background_border"

                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/weight1"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"

                    android:text="@string/weight1"
                    android:textColor="@color/control_switch_color_selector" />

                <RadioButton
                    android:id="@+id/weight2"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"

                    android:text="@string/weight2"
                    android:textColor="@color/control_switch_color_selector" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="@string/temperatureFormat"
                android:gravity="center|end" />

            <RadioGroup
                android:id="@+id/temperatureRG"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"

                android:background="@drawable/control_switch_background_border"

                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/temperature1"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"

                    android:text="@string/temperature1"
                    android:textColor="@color/control_switch_color_selector" />

                <RadioButton
                    android:id="@+id/temperature2"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"

                    android:text="@string/temperature2"
                    android:textColor="@color/control_switch_color_selector" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="@string/lengthFormat"
                android:gravity="center|end" />

            <RadioGroup
                android:id="@+id/lengthRG"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"

                android:background="@drawable/control_switch_background_border"

                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/length1"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"

                    android:text="@string/length1"
                    android:textColor="@color/control_switch_color_selector" />

                <RadioButton
                    android:id="@+id/length2"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"

                    android:text="@string/length2"
                    android:textColor="@color/control_switch_color_selector" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="@string/timeFormat"
                android:gravity="center|end" />

            <RadioGroup
                android:id="@+id/timeRG"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"

                android:background="@drawable/control_switch_background_border"

                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/time1"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"

                    android:text="@string/time1"
                    android:textColor="@color/control_switch_color_selector" />

                <RadioButton
                    android:id="@+id/time2"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"

                    android:text="@string/time2"
                    android:textColor="@color/control_switch_color_selector" />
            </RadioGroup>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:text="@string/dateFormat"
                android:gravity="center|end" />

            <RadioGroup
                android:id="@+id/dateRG"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"

                android:background="@drawable/control_switch_background_border"

                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/date1"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"

                    android:text="@string/date1"
                    android:textColor="@color/control_switch_color_selector" />

                <RadioButton
                    android:id="@+id/date2"

                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"

                    android:layout_weight="1"

                    android:button="@null"
                    android:gravity="center"

                    android:text="@string/date2"
                    android:textColor="@color/control_switch_color_selector" />
            </RadioGroup>
        </TableRow>
    </TableLayout >
</androidx.constraintlayout.widget.ConstraintLayout>
